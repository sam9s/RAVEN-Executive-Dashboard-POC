# ===========================================
# EXECUTIVE DASHBOARD - ENVIRONMENT VARIABLES
# ===========================================

# SUPABASE
# Get these from your Supabase Project Settings -> API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# CLICKUP
# Create a Personal API Token in ClickUp Settings -> Apps
# Get Space ID from the URL of your Space or via API
CLICKUP_API_TOKEN=pk_...
CLICKUP_SPACE_ID=123456789

# GOOGLE SERVICE ACCOUNT (For Calendar Sync)
# Create a Service Account in Google Cloud Console
# Enable Google Calendar API
# Download JSON key and copy values (format private key with \n)
GOOGLE_CLIENT_EMAIL=service-account-email@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
GOOGLE_CALENDAR_ID=primary

# GMAIL SENDER
# The email address you want to send form (must be authorized)
GMAIL_SENDER_EMAIL=your-email@gmail.com

# OLLAMA (Local AI)
# Install from ollama.com and run 'ollama serve'
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# AI ASSISTANT (Cloud AI - Optional)
# Get from platform.openai.com
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o

# APP CONFIG
NEXT_PUBLIC_APP_URL=http://localhost:3000

# GOOGLE OAUTH (For User Login)
# Create OAuth 2.0 Credentials in Google Cloud Console
# Set Redirect URI to http://localhost:3000/api/auth/google/callback
GOOGLE_OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-client-secret
